<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.idhub.wallet">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:name=".App"
        android:theme="@style/WalletAppTheme">
        <activity android:name=".MainActivity">

        </activity>
        <activity android:name=".createmanager.IdentityManagerActivity" />
        <activity android:name=".createmanager.walletcreate.InputPasswordActivity" />
        <activity android:name=".createmanager.walletcreate.MnemonicBackupHintActivity" />
        <activity android:name=".createmanager.walletcreate.MnemonicBackupPreviewActivity" >
        </activity>
        <activity android:name=".createmanager.walletcreate.MnemonicBackupConfirmActivity" />
        <activity android:name=".wallet.walletsetting.WalletSettingActivity" />
        <activity android:name=".wallet.manager.WalletManagerActivity" />
        <activity android:name=".wallet.export.ExportWalletContentActivity" />
        <activity android:name=".wallet.token.TokenManagerActivity" />
        <activity android:name=".common.qrCode.QRCodeScanActivity" />
        <activity android:name=".wallet.transaction.TransactionActivity" />
        <activity android:name=".wallet.transaction.SendActivity" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

        </activity>
        <activity android:name=".wallet.transaction.ReceiveActivity" />
        <activity android:name=".splash.SplashActivity">

        </activity>
    </application>

</manifest>