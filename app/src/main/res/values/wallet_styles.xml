<resources>

    <!-- Base application theme. -->
    <style name="WalletAppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="WalletSplashTheme" parent="WalletAppTheme">
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowDisablePreview">true</item>
    </style>
 <style name="WalletCommonEditText" >
     <item name="android:layout_width">match_parent</item>
     <item name="android:layout_height">wrap_content</item>
     <item name="android:background">@drawable/wallet_user_basic_info_edit_background</item>
     <item name="android:gravity">left</item>
     <item name="android:textSize">15sp</item>
     <item name="android:textColorHint">@color/wallet_create_wallet_hint</item>
     <item name="android:paddingLeft">13dp</item>
     <item name="android:paddingTop">10dp</item>
     <item name="android:paddingRight">13dp</item>
     <item name="android:paddingBottom">10dp</item>
     <item name="android:layout_marginLeft">50dp</item>
     <item name="android:layout_marginRight">50dp</item>
    </style>

    <style name="WalletCommonButton">
        <item name="android:layout_width">330dp</item>
        <item name="android:layout_height">45dp</item>
        <item name="android:background">@drawable/wallet_shape_button</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/wallet_white</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="WalletAnimation">
        <item name="android:windowEnterAnimation">@anim/wallet_in_anim</item>
        <item name="android:windowExitAnimation">@anim/wallet_out_anim</item>
    </style>

    <style name="WalletTabLayout">
        <item name="android:textSize">20sp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="WalletDatePickerStyle" parent="android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowBackground">@color/wallet_white</item>
        <item name="android:windowEnterAnimation">@anim/wallet_date_picker_in</item>
        <item name="android:windowExitAnimation">@anim/wallet_date_picker_out</item>
    </style>


    <style name="WalletShowDialog" parent="Theme.AppCompat.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowBackground">@color/wallet_transparent</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>
</resources>
