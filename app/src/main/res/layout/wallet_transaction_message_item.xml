<com.idhub.wallet.setting.message.transaction.TransactionMessageItemView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@mipmap/wallet_shadow_bg"
    android:paddingTop="5dp"
    android:layout_marginLeft="7dp"
    android:layout_marginRight="7dp"
    android:paddingBottom="15dp"
    tools:context=".setting.message.transaction.TransactionMessageFragment">

    <!--    <ImageView-->
    <!--        android:id="@+id/message_icon"-->
