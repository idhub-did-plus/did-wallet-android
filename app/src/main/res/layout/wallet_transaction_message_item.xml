    <TextView
        android:id="@+id/tv_to_address"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="3dp"
        app:layout_constraintBottom_toBottomOf="@id/tv_to"
        app:layout_constraintLeft_toRightOf="@id/tv_to"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/tv_to"
        tools:text="0x4c000E507bE6663e264a1A21507a69Bfa5035D95" />


    <TextView
        android:id="@+id/time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"
        android:textColor="@color/wallet_text_black"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="2019/08/30 17:08" />

    <!--    <TextView-->
