    <TextView
        android:id="@+id/tv_from"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/wallet_text_background_grey"
        android:padding="5dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/time"
        android:text="From" />

    <TextView
        android:id="@+id/tv_from_address"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="3dp"
        app:layout_constraintBottom_toBottomOf="@id/tv_from"
        app:layout_constraintLeft_toRightOf="@id/tv_from"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/tv_from"
        tools:text="0x4c000E507bE6663e264a1A21507a69Bfa5035D95" />


    <TextView
        android:id="@+id/tv_to"
        android:layout_width="wrap_content"
