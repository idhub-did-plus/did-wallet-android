<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools">

    <Spinner
        android:id="@+id/spinner2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        app:layout_constraintRight_toRightOf="parent"
        android:entries="@array/identity_file_spinner"
        app:layout_constraintBottom_toBottomOf="@id/tv_select_file_name"
        app:layout_constraintLeft_toRightOf="@id/tv_select_file_name"
        app:layout_constraintTop_toTopOf="@id/tv_select_file_name" />

    <TextView
        android:id="@+id/tv_select_file_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="20dp"
        android:text="@string/wallet_select_upload_file_type"
        android:textColor="@color/wallet_black"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/et_information"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginRight="12dp"
        android:background="@null"
        android:minHeight="60dp"
        android:textSize="14sp"
        app:layout_constraintLeft_toRightOf="@id/tv_title"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/tv_title"
        app:layout_constraintTop_toTopOf="@id/tv_title"
        android:hint="@string/wallet_please_input_file_name" />

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:gravity="center"
        android:padding="12dp"
        android:layout_marginTop="12dp"
        android:textColor="@color/wallet_black"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@id/tv_select_file_name"
        app:layout_constraintLeft_toLeftOf="parent"
        android:text="@string/wallet_file_name" />

    <Button
        app:layout_constraintTop_toBottomOf="@id/tv_title"
        app:layout_constraintLeft_toLeftOf="@id/tv_select_file_name"
        android:layout_width="wrap_content"
        android:text="@string/wallet_upload_file"
        android:layout_height="wrap_content" />
</androidx.constraintlayout.widget.ConstraintLayout>