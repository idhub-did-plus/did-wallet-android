<?xml version="1.0" encoding="utf-8"?>
<com.idhub.wallet.me.information.view.UploadFileOtherView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <TextView
        android:id="@+id/file_type"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="20dp"
        android:text="ID_FONT"
        android:drawableRight="@mipmap/wallet_arrow_down_gray"
        android:textSize="13sp"
       android:gravity="center_vertical"
        android:paddingLeft="10dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:background="@drawable/wallet_rectangle_line_4"
        app:layout_constraintBottom_toBottomOf="@id/tv_select_file_name"
        app:layout_constraintLeft_toRightOf="@id/tv_select_file_name"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/tv_select_file_name" />


<!--    <Spinner-->
<!--        android:id="@+id/spinner_type"-->
<!--        android:layout_width="0dp"-->
<!--        android:layout_height="wrap_content"-->
<!--        android:layout_marginLeft="20dp"-->
<!--        android:entries="@array/identity_file_spinner"-->
<!--        android:paddingTop="5dp"-->
<!--        android:paddingBottom="5dp"-->
<!--        app:layout_constraintBottom_toBottomOf="@id/tv_select_file_name"-->
<!--        app:layout_constraintLeft_toRightOf="@id/tv_select_file_name"-->

<!--        app:layout_constraintTop_toTopOf="@id/tv_select_file_name" />-->

    <TextView
        android:id="@+id/tv_select_file_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="23dp"
        android:text="@string/wallet_select_upload_file_type"
        android:textColor="@color/wallet_black"
        android:textSize="13sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/et_information"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginRight="20dp"
        android:hint="@string/wallet_please_input_file_name"
        android:textSize="13sp"
        android:gravity="center_vertical"
        android:paddingLeft="10dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        app:layout_constraintBottom_toBottomOf="@id/tv_title"
        android:background="@drawable/wallet_rectangle_line_4"
        app:layout_constraintLeft_toRightOf="@id/tv_title"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/tv_title" />

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginTop="13dp"
        android:gravity="center"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:text="@string/wallet_file_name"
        android:textColor="@color/wallet_black"
        android:textSize="13sp"
        app:layout_constraintLeft_toLeftOf="@id/tv_select_file_name"
        app:layout_constraintTop_toBottomOf="@id/file_type" />

    <TextView
        android:id="@+id/btn_select_file"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/wallet_upload_file"
        android:textSize="11sp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:gravity="center"
        android:layout_marginTop="15dp"
        android:background="@mipmap/wallet_select_file_btn_background"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/et_information" />

    <TextView
        android:id="@+id/file_path"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:textColor="@color/wallet_black"
        android:textSize="16sp"
        android:visibility="gone"
        app:layout_constraintLeft_toLeftOf="@id/tv_select_file_name"
        app:layout_constraintTop_toBottomOf="@id/btn_select_file"
        tools:text="@string/wallet_upload" />


    <ImageView
        android:id="@+id/file_image"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="@id/tv_select_file_name"
        app:layout_constraintTop_toBottomOf="@id/file_path"
        tools:src="@mipmap/wallet_eth_icon" />
</com.idhub.wallet.me.information.view.UploadFileOtherView>