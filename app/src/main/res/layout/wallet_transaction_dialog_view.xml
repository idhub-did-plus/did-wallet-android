<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="@drawable/wallet_shape_dialog"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:text="交易失败"
        android:gravity="center"
        android:layout_marginTop="25dp"
        android:textColor="@color/wallet_black"
        android:textSize="17sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/message"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="15dp"
        tools:text="asldjhkslhfjsv"
        android:textColor="@color/wallet_text_gray_color"
        android:textSize="15sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <View
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:background="@color/wallet_line_gray"
        android:layout_height="1dp" />

    <TextView
        android:id="@+id/confirm"
        android:gravity="center"
        android:paddingTop="15dp"
        android:paddingBottom="15dp"
        android:textColor="@color/wallet_main_yellow_color"
        android:text="确定"
        android:textSize="15sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</LinearLayout>