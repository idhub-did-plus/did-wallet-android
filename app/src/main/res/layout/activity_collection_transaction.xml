<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".assets.CollectionTransactionActivity">

    <include
        android:id="@+id/title"
        layout="@layout/wallet_common_title_layout"
        android:layout_width="0dp"
        android:layout_height="48dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/image"
        android:layout_width="@dimen/dp_180"
        android:layout_height="@dimen/dp_180"
        android:layout_marginTop="@dimen/dp_72"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/title"
        tools:src="@mipmap/ic_launcher" />

    <TextView
        android:id="@+id/send_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_40"
        android:layout_marginTop="@dimen/dp_40"
        android:text="@string/wallet_send_to"
        android:textColor="@color/wallet_text_black"
        android:textSize="@dimen/font_sp_16"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/image" />

    <EditText
        android:id="@+id/address"
        android:layout_width="@dimen/dp_295"
        android:layout_height="@dimen/dp_40"
        android:layout_marginTop="@dimen/dp_8"
        android:textSize="@dimen/font_sp_12"
        android:background="@drawable/wallet_collection_send_edittext"
        android:gravity="center_vertical"
        android:hint="@string/wallet_wallet_address"
        android:paddingRight="@dimen/dp_5"
        android:paddingLeft="@dimen/dp_5"
        app:layout_constraintLeft_toLeftOf="@id/send_name"
        app:layout_constraintTop_toBottomOf="@id/send_name" />

    <TextView
        android:id="@+id/gas_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_20"
        android:text="@string/wallet_gas_amount"
        android:visibility="gone"
        android:textSize="16sp"
        app:layout_constraintLeft_toLeftOf="@id/send_name"
        app:layout_constraintTop_toBottomOf="@id/address" />

    <TextView
        android:id="@+id/gas_amount"
        android:layout_width="wrap_content"
        android:visibility="gone"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_marginTop="@dimen/dp_5"
        android:layout_marginRight="@dimen/dp_40"
        android:drawableRight="@mipmap/wallet_arrow_right_main_color"
        android:textColor="@color/wallet_main_yellow_color"
        android:textSize="16sp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/gas_name"
        tools:text="0.000023 ETH" />

    <TextView
        android:id="@+id/transfer"
        android:layout_width="@dimen/dp_151"
        android:layout_height="@dimen/dp_40"
        android:layout_marginTop="@dimen/dp_24"
        android:background="@color/wallet_main_yellow_color"
        android:gravity="center"
        android:text="@string/wallet_next"
        android:textColor="@color/wallet_white"
        android:textSize="@dimen/font_sp_16"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/gas_amount" />

</androidx.constraintlayout.widget.ConstraintLayout>