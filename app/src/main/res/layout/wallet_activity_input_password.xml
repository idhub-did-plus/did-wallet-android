<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".identitymanager.identitycreate.InputPasswordActivity">

    <include
        android:id="@+id/title"
        layout="@layout/wallet_common_title_layout"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/ll_warning"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/wallet_orange"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@id/title">

        <TextView
            android:id="@+id/tv_warning_top"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="12dp"
            android:text="@string/wallet_password_warning_top"
            android:textColor="@color/wallet_text_orange"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tv_warning_bottom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="12dp"
            android:text="@string/wallet_password_warning_bottom"
            android:textColor="@color/wallet_text_orange"
            android:textSize="12sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_wallet_name"
        android:layout_width="294dp"
        android:layout_height="35dp"
        android:layout_marginTop="10dp"
        android:orientation="vertical"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ll_warning">

        <EditText
            android:id="@+id/et_wallet_name"
            android:layout_width="match_parent"
            android:layout_height="34dp"
            android:background="@null"
            android:hint="@string/wallet_wallet_name"
            android:textColor="@color/wallet_edittext_color"
            android:textColorHint="@color/wallet_hint"
            android:textSize="14sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/wallet_line_gray" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_password"
        android:layout_width="294dp"
        android:layout_height="35dp"
        android:layout_marginTop="10dp"
        android:orientation="vertical"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ll_wallet_name">

        <EditText
            android:id="@+id/et_password"
            android:layout_width="match_parent"
            android:layout_height="34dp"
            android:background="@null"
            android:hint="@string/wallet_password"
            android:textColor="@color/wallet_edittext_color"
            android:textColorHint="@color/wallet_hint"
            android:textSize="14sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/wallet_line_gray" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_password_again"
        android:layout_width="294dp"
        android:layout_height="35dp"
        android:layout_marginTop="10dp"
        android:orientation="vertical"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ll_password">

        <EditText
            android:id="@+id/et_password_again"
            android:layout_width="match_parent"
            android:layout_height="34dp"
            android:background="@null"
            android:hint="@string/wallet_password_again"
            android:textColor="@color/wallet_edittext_color"
            android:textColorHint="@color/wallet_hint"
            android:textSize="14sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/wallet_line_gray" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/password_tip"
        android:layout_width="294dp"
        android:layout_height="35dp"
        android:layout_marginTop="10dp"
        android:orientation="vertical"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ll_password_again">

        <EditText
            android:id="@+id/et_password_tip"
            android:layout_width="match_parent"
            android:layout_height="34dp"
            android:background="@null"
            android:hint="@string/wallet_password_tip"
            android:textColor="@color/wallet_edittext_color"
            android:textColorHint="@color/wallet_hint"
            android:textSize="14sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/wallet_line_gray" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_create"
        style="@style/WalletCommonButton"
        android:layout_marginBottom="14dp"
        android:text="@string/wallet_create"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

</android.support.constraint.ConstraintLayout>