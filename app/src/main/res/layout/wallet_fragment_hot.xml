<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".home.fragment.HotFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:orientation="vertical">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/news_container"
            android:layout_width="match_parent"
            android:layout_height="111dp"
            android:background="@mipmap/wallet_shadow_background">

            <TextView
                android:id="@+id/news_title"
                android:layout_width="wrap_content"
                android:layout_height="22dp"
                android:layout_marginLeft="24dp"
                android:layout_marginTop="34dp"
                android:includeFontPadding="false"
                android:text="News"
                android:textColor="@color/wallet_black"
                android:textSize="16sp"
                android:typeface="serif"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/news_more_image"
                android:layout_width="29dp"
                android:layout_height="12dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/wallet_news_more_shape"
                android:scaleType="center"
                android:src="@mipmap/wallet_right_arrow_home_news"
                app:layout_constraintLeft_toLeftOf="@id/news_title"
                app:layout_constraintRight_toRightOf="@id/news_title"
                app:layout_constraintTop_toBottomOf="@id/news_title" />

            <View
                android:id="@+id/news_line"
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="22dp"
                android:layout_marginBottom="22dp"
                android:background="@color/wallet_line_gray"
                app:layout_constraintLeft_toRightOf="@id/news_title" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="63dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="24dp"
                android:layout_marginRight="21dp"
                android:layout_marginBottom="24dp"
                android:ellipsize="end"
                android:lineSpacingExtra="4.5dp"
                android:lines="3"
                android:text="With over 100 tokens deployed and 12 with
 five or more tokenholders, we’ve built the
 infrastructure to make the integration…"
                android:textColor="@color/wallet_black"
                android:textSize="14sp"
                android:typeface="serif"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toRightOf="@id/news_line"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <TextView
            android:id="@+id/new_st_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="16dp"
            android:text="NEW ST"
            android:textColor="@color/wallet_text_black"
            android:textSize="20sp"
            android:typeface="serif" />

        <include
            android:id="@+id/st_view"
            layout="@layout/wallet_st_main_view" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/st_recommend_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="24dp"
                android:text="ST Recommend"
                android:textColor="@color/wallet_text_black"
                android:textSize="20sp"
                android:typeface="serif"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.core.widget.NestedScrollView
                android:id="@+id/scroll_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/st_recommend_title">

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/st_recommend_recycler"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
            </androidx.core.widget.NestedScrollView>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/main_epidemic_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="24dp"
                android:text="Main Epidemic"
                android:textColor="@color/wallet_text_black"
                android:textSize="20sp"
                android:typeface="serif"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/main_epidemic_recycler"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toBottomOf="@id/main_epidemic_title" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </LinearLayout>


</androidx.core.widget.NestedScrollView>