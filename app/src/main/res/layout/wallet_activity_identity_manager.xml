<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".identitymanager.IdentityManagerActivity">

    <TextView
        android:id="@+id/tv_identity_create"
        android:layout_width="286dp"
        android:layout_height="46dp"
        android:background="@drawable/wallet_shape_circle"
        android:gravity="center"
        android:text="@string/wallet_identity_create"
        android:textColor="@color/wallet_white"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@id/tv_identity_recover"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_identity_recover"
        android:layout_width="286dp"
        android:layout_height="46dp"
        android:background="@drawable/wallet_shape_circle"
        android:gravity="center"
        android:text="@string/wallet_identity_recovery"
        android:textColor="@color/wallet_white"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@id/tv_identity_import"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_identity_create" />

    <TextView
        android:id="@+id/tv_identity_import"
        android:layout_width="286dp"
        android:layout_height="46dp"
        android:background="@drawable/wallet_shape_circle"
        android:gravity="center"
        android:text="@string/wallet_identity_import"
        android:textColor="@color/wallet_white"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_identity_recover" />
</android.support.constraint.ConstraintLayout>