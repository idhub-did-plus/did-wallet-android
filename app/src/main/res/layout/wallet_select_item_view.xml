<?xml version="1.0" encoding="utf-8"?>
<com.idhub.wallet.wallet.mainfragment.view.SelectWalletItemView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <View
        android:id="@+id/state_view"
        android:background="@color/wallet_main_blue_color"
        android:layout_width="3dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_height="30dp" />

    <TextView
        android:id="@+id/tv_wallet_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:textColor="@color/wallet_main_blue_color"
        android:textSize="15sp"
        tools:text="ETH-Wallet" />

    <TextView
        android:id="@+id/tv_wallet_address"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:ellipsize="middle"
        android:singleLine="true"
        android:layout_marginTop="5dp"
        android:textColor="@color/wallet_main_blue_color"
        android:textSize="12sp"
        app:layout_constraintLeft_toLeftOf="@id/tv_wallet_name"
        app:layout_constraintTop_toBottomOf="@id/tv_wallet_name"
        app:layout_constraintRight_toLeftOf="@id/upgrade_image_view"
        android:layout_marginRight="10dp"
        tools:text="0x4c000E507bE6663e264a1A21507a69Bfa5035D95" />

    <TextView
        android:id="@+id/tv_default_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:textSize="12sp"
        android:textColor="@color/wallet_blue_text"
        app:layout_constraintBottom_toBottomOf="@id/tv_wallet_name"
        app:layout_constraintLeft_toRightOf="@id/tv_wallet_name"
        app:layout_constraintTop_toTopOf="@id/tv_wallet_name"
        tools:text="Default Address" />


    <View
        app:layout_constraintTop_toBottomOf="@id/tv_wallet_address"
        android:background="@color/wallet_line_gray"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="15dp"
        app:layout_constraintLeft_toLeftOf="@id/tv_wallet_name"
        android:layout_height="1dp" />

    <ImageView
        android:id="@+id/upgrade_image_view"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="15dp"
        android:src="@mipmap/wallet_upgrade_blue_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</com.idhub.wallet.wallet.mainfragment.view.SelectWalletItemView>