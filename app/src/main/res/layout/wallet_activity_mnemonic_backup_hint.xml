<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".createmanager.walletcreate.MnemonicBackupHintActivity">


    <TextView
        android:id="@+id/tv_backup_hint_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_25"
        android:layout_marginTop="@dimen/dp_64"
        android:layout_marginRight="@dimen/dp_25"
        android:text="@string/wallet_backup_hint"
        android:textColor="@color/wallet_black"
        android:textSize="@dimen/font_sp_20"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_backup_top"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_5"
        android:text="@string/wallet_backup_hint_top"
        android:textColor="@color/wallet_text_gray_color"
        android:textSize="@dimen/font_sp_15"
        app:layout_constraintLeft_toLeftOf="@id/tv_backup_hint_title"
        app:layout_constraintRight_toRightOf="@id/tv_backup_hint_title"
        app:layout_constraintTop_toBottomOf="@id/tv_backup_hint_title" />

    <TextView
        android:id="@+id/tv_backup_first"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_30"
        android:drawableLeft="@drawable/wallet_blue_circle_point"
        android:drawablePadding="@dimen/dp_5"
        android:text="@string/wallet_backup_mnemonic"
        android:textColor="@color/wallet_black"
        android:textSize="@dimen/font_sp_16"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="@id/tv_backup_hint_title"
        app:layout_constraintRight_toRightOf="@id/tv_backup_hint_title"
        app:layout_constraintTop_toBottomOf="@id/tv_backup_top" />

    <TextView
        android:id="@+id/tv_backup_first_1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_5"
        android:text="@string/wallet_backup_hint_first_1"
        android:textColor="@color/wallet_text_gray_color"
        android:textSize="@dimen/font_sp_15"
        android:layout_marginLeft="@dimen/dp_33"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="@id/tv_backup_hint_title"
        app:layout_constraintTop_toBottomOf="@id/tv_backup_first" />

    <TextView
        android:id="@+id/tv_backup_first_2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_10"
        android:lineSpacingExtra="@dimen/dp_4_half"
        android:text="@string/wallet_backup_hint_first_2"
        android:textColor="@color/wallet_text_gray_color"
        android:textSize="@dimen/font_sp_15"
        app:layout_constraintLeft_toLeftOf="@id/tv_backup_first_1"
        app:layout_constraintRight_toRightOf="@id/tv_backup_hint_title"
        app:layout_constraintTop_toBottomOf="@id/tv_backup_first_1" />

    <TextView
        android:id="@+id/tv_backup_two"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_30"
        android:drawableLeft="@drawable/wallet_blue_circle_point"
        android:drawablePadding="@dimen/dp_5"
        android:text="@string/wallet_offline_manager"
        android:textColor="@color/wallet_black"
        android:textSize="@dimen/font_sp_16"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="@id/tv_backup_hint_title"
        app:layout_constraintRight_toRightOf="@id/tv_backup_hint_title"
        app:layout_constraintTop_toBottomOf="@id/tv_backup_first_2" />

    <TextView
        android:id="@+id/tv_backup_two_1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_5"
        android:text="@string/wallet_backup_hint_two_1"
        android:lineSpacingExtra="@dimen/dp_4_half"
        android:textColor="@color/wallet_text_gray_color"
        android:textSize="@dimen/font_sp_15"
        app:layout_constraintLeft_toLeftOf="@id/tv_backup_first_1"
        app:layout_constraintRight_toRightOf="@id/tv_backup_hint_title"
        app:layout_constraintTop_toBottomOf="@id/tv_backup_two" />

    <TextView
        android:id="@+id/tv_backup_two_2"
        android:layout_width="0dp"
        android:lineSpacingExtra="@dimen/dp_4_half"
        android:layout_height="wrap_content"

        android:layout_marginTop="@dimen/dp_5"
        android:text="@string/wallet_backup_hint_two_2"
        android:textColor="@color/wallet_text_gray_color"
        android:textSize="@dimen/font_sp_15"
        app:layout_constraintLeft_toLeftOf="@id/tv_backup_first_1"
        app:layout_constraintRight_toRightOf="@id/tv_backup_hint_title"
        app:layout_constraintTop_toBottomOf="@id/tv_backup_two_1" />

    <TextView
        android:id="@+id/tv_next"
        android:layout_width="@dimen/dp_315"
        android:layout_height="@dimen/dp_45"
        android:layout_marginTop="@dimen/dp_50"
        android:layout_marginBottom="@dimen/dp_14"
        android:background="@drawable/wallet_main_btn_background"
        android:gravity="center"
        android:text="@string/wallet_next"
        android:textColor="@color/wallet_white"
        android:textSize="@dimen/font_sp_20"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_backup_two_2" />

</androidx.constraintlayout.widget.ConstraintLayout>