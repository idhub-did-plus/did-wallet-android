<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/total_supply_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:text="@string/wallet_total_supply"
        android:textColor="@color/wallet_text_black"
        android:textSize="16sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/total_supply"
        android:layout_width="wrap_content"
        android:textSize="16sp"
        android:layout_marginLeft="12dp"
        android:textColor="@color/wallet_blue_text"
        app:layout_constraintTop_toTopOf="@id/total_supply_name"
        app:layout_constraintLeft_toRightOf="@id/total_supply_name"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/total_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="@string/wallet_total_name"
        android:textColor="@color/wallet_text_black"
        android:textSize="16sp"
        app:layout_constraintLeft_toLeftOf="@id/total_supply_name"
        app:layout_constraintTop_toBottomOf="@id/total_supply_name" />

    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:textSize="16sp"
        android:textColor="@color/wallet_blue_text"
        app:layout_constraintTop_toTopOf="@id/total_name"
        app:layout_constraintLeft_toLeftOf="@id/total_supply"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/symbol_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="@string/wallet_symbol"
        android:textColor="@color/wallet_text_black"
        android:textSize="16sp"
        app:layout_constraintLeft_toLeftOf="@id/total_supply_name"
        app:layout_constraintTop_toBottomOf="@id/total_name" />

    <TextView
        android:id="@+id/symbol"
        android:layout_width="wrap_content"
        android:textSize="16sp"
        android:textColor="@color/wallet_blue_text"
        app:layout_constraintTop_toTopOf="@id/symbol_name"
        app:layout_constraintLeft_toLeftOf="@id/total_supply"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/operate_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="@string/wallet_operate"
        android:textColor="@color/wallet_text_black"
        android:textSize="16sp"
        app:layout_constraintLeft_toLeftOf="@id/total_supply_name"
        app:layout_constraintTop_toBottomOf="@id/symbol_name" />

    <TextView
        android:id="@+id/operate"
        android:layout_width="wrap_content"
        android:textSize="16sp"
        android:text="@string/wallet_view_detail"
        android:textColor="@color/wallet_blue_text"
        app:layout_constraintTop_toTopOf="@id/operate_name"
        app:layout_constraintLeft_toLeftOf="@id/total_supply"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/controller_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="@string/wallet_controller"
        android:textColor="@color/wallet_text_black"
        android:textSize="16sp"
        app:layout_constraintLeft_toLeftOf="@id/total_supply_name"
        app:layout_constraintTop_toBottomOf="@id/operate_name" />

    <TextView
        android:id="@+id/controller"
        android:layout_width="wrap_content"
        android:textSize="16sp"
        android:text="@string/wallet_view_detail"
        android:textColor="@color/wallet_blue_text"
        app:layout_constraintTop_toTopOf="@id/controller_name"
        app:layout_constraintLeft_toLeftOf="@id/total_supply"
        android:layout_height="wrap_content" />



</androidx.constraintlayout.widget.ConstraintLayout>