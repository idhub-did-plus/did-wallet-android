<?xml version="1.0" encoding="utf-8"?>
<com.idhub.wallet.assets.view.AssetsPromptView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/identity_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/identity_icon"
            android:layout_width="@dimen/dp_30"
            android:layout_height="@dimen/dp_30"
            android:layout_marginLeft="@dimen/dp_16"
            android:layout_marginTop="@dimen/dp_8"
            android:background="@color/wallet_color_005FC7"
            android:scaleType="center"
            android:src="@mipmap/wallet_identity_icon"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/identity_title"
            android:layout_width="@dimen/dp_313"
            android:layout_height="@dimen/dp_0"
            android:background="@drawable/wallet_identity_prompt_top_bg"
            android:drawableRight="@mipmap/wallet_identity_prompt_detail"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/dp_10"
            android:paddingRight="@dimen/dp_9"
            android:text="Digital identity"
            android:textColor="@color/wallet_white"
            android:textSize="@dimen/font_sp_18"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@id/identity_icon"
            app:layout_constraintLeft_toRightOf="@id/identity_icon"
            app:layout_constraintTop_toTopOf="@id/identity_icon" />

        <ImageView
            android:id="@+id/identity_bottom_bg"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_2"
            android:scaleType="fitXY"
            android:src="@mipmap/wallet_identity_prompt_bottom_bg"
            app:layout_constraintLeft_toLeftOf="@id/identity_icon"
            app:layout_constraintRight_toRightOf="@id/identity_title"
            app:layout_constraintTop_toBottomOf="@id/identity_icon" />

        <TextView
            android:id="@+id/identity_content_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_30"
            android:layout_marginTop="@dimen/dp_18"
            android:drawableLeft="@mipmap/wallet_identity_prompt_content_icon"
            android:drawablePadding="@dimen/dp_16"
            android:text="Understand the role of digital identity"
            android:textColor="@color/wallet_text_black"
            android:textSize="@dimen/font_sp_12"
            app:layout_constraintLeft_toLeftOf="@id/identity_bottom_bg"
            app:layout_constraintTop_toBottomOf="@id/identity_icon" />

        <TextView
            android:id="@+id/identity_content_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_10"
            android:drawableLeft="@mipmap/wallet_identity_prompt_content_icon"
            android:drawablePadding="@dimen/dp_16"
            android:text="Digital identity of the upgrade process"
            android:textColor="@color/wallet_text_black"
            android:textSize="12sp"
            app:layout_constraintLeft_toLeftOf="@id/identity_content_1"
            app:layout_constraintTop_toBottomOf="@id/identity_content_1" />

        <TextView
            android:id="@+id/identity_content_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_10"
            android:drawableLeft="@mipmap/wallet_identity_prompt_content_icon"
            android:drawablePadding="@dimen/dp_16"
            android:text="Digital identity credential acquisition"
            android:textColor="@color/wallet_text_black"
            android:textSize="@dimen/font_sp_12"
            app:layout_constraintLeft_toLeftOf="@id/identity_content_2"
            app:layout_constraintTop_toBottomOf="@id/identity_content_2" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:id="@+id/st_container"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/st_icon"
            android:layout_width="@dimen/dp_30"
            android:layout_height="@dimen/dp_30"
            android:layout_marginLeft="@dimen/dp_16"
            android:layout_marginTop="@dimen/dp_12"
            android:scaleType="fitXY"
            android:src="@mipmap/wallet_st_prompt_icon"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/st_title"
            android:layout_width="@dimen/dp_313"
            android:layout_height="0dp"
            android:background="@drawable/wallet_identity_prompt_top_bg"
            android:drawableRight="@mipmap/wallet_identity_prompt_detail"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/dp_10"
            android:paddingRight="@dimen/dp_9"
            android:text="Security Token"
            android:textColor="@color/wallet_white"
            android:textSize="@dimen/font_sp_18"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@id/st_icon"
            app:layout_constraintLeft_toRightOf="@id/st_icon"
            app:layout_constraintTop_toTopOf="@id/st_icon" />

        <ImageView
            android:id="@+id/st_bottom_bg"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_2"
            android:scaleType="fitXY"
            android:src="@mipmap/wallet_st_prompt_bottom_bg"
            app:layout_constraintLeft_toLeftOf="@id/st_icon"
            app:layout_constraintRight_toRightOf="@id/st_title"
            app:layout_constraintTop_toBottomOf="@id/st_icon" />

        <TextView
            android:id="@+id/st_content_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_22"
            android:layout_marginTop="@dimen/dp_12"
            android:text="Content introduction of token assets"
            android:textColor="@color/wallet_text_black"
            android:textSize="@dimen/font_sp_12"
            app:layout_constraintLeft_toLeftOf="@id/st_bottom_bg"
            app:layout_constraintTop_toBottomOf="@id/st_icon" />

        <TextView
            android:id="@+id/st_content_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_10"
            android:text="Add token assets"
            android:textColor="@color/wallet_text_black"
            android:textSize="@dimen/font_sp_12"
            app:layout_constraintLeft_toLeftOf="@id/st_content_1"
            app:layout_constraintTop_toBottomOf="@id/st_content_1" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</com.idhub.wallet.assets.view.AssetsPromptView>