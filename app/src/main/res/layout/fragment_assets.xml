<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/wallet_color_f5f5f5"
    tools:context=".assets.AssetsFragment">

    <include
        android:id="@+id/title"
        layout="@layout/wallet_main_top_title_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.core.widget.NestedScrollView
        android:id="@+id/scroll_view"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/title">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/assets_top_bg"
                android:layout_width="match_parent"
                android:layout_height="178dp"
                android:scaleType="fitXY"
                android:src="@mipmap/wallet_assets_top_bg"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/head"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_marginTop="23dp"
                android:src="@mipmap/wallet_default_head"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <LinearLayout
                android:id="@+id/upgrade_btn_layout"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_marginRight="16dp"
                android:background="@drawable/wallet_upgrade_btn_bg"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                app:layout_constraintBottom_toBottomOf="@id/head"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="@id/head">

                <ImageView
                    android:id="@+id/upgrade_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12dp"
                    android:src="@mipmap/wallet_upgrade_icon" />

                <TextView
                    android:id="@+id/upgrade_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="10dp"
                    android:text="@string/wallet_upgrade"
                    android:textColor="@color/wallet_white" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/claims_layout"
                android:layout_width="match_parent"
                android:layout_height="23dp"
                android:layout_marginTop="16dp"
                android:gravity="center"
                android:orientation="horizontal"
                app:layout_constraintTop_toBottomOf="@id/head">

                <ImageView
                    android:id="@+id/claims_idhub_vip"
                    android:layout_width="18dp"
                    android:layout_height="23dp"
                    android:src="@mipmap/wallet_idhub_vip" />

                <ImageView
                    android:id="@+id/claims_idhub_svip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="13dp"
                    android:src="@mipmap/wallet_idhub_svip" />

                <ImageView
                    android:id="@+id/claims_idhub_investor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="11dp"
                    android:src="@mipmap/wallet_idhub_investor" />

                <ImageView
                    android:id="@+id/claims_idhub_purchase"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:src="@mipmap/wallet_idhub_purchaser" />

                <ImageView
                    android:id="@+id/claims_idhub_compliant"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:src="@mipmap/wallet_idhub_compliant" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/wallet_info"
                android:layout_width="match_parent"
                android:layout_height="61dp"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginRight="16dp"
                android:background="@drawable/wallet_white_bg_radius_4"
                android:orientation="vertical"
                app:layout_constraintTop_toBottomOf="@id/claims_layout">

                <TextView
                    android:id="@+id/wallet_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="6dp"
                    android:textColor="@color/wallet_text_black"
                    android:textSize="12sp"
                    tools:text="wallet" />

                <View
                    android:id="@+id/line"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="16dp"
                    android:background="@color/wallet_line_gray" />

                <TextView
                    android:id="@+id/wallet_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="4dp"
                    android:drawableRight="@mipmap/wallet_assets_qr_code_icon"
                    android:drawablePadding="15dp"
                    android:ellipsize="middle"
                    android:gravity="center"
                    android:singleLine="true"
                    android:textColor="@color/wallet_color_686868"
                    android:textSize="16sp"
                    tools:text="0x995f7a7025e9964â€¦ea5Aebc88a0a" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/tab_layout_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="6dp"
                android:layout_marginTop="9dp"
                android:layout_marginRight="6dp"
                android:background="@mipmap/wallet_assets_tab_bg"
                android:gravity="center"
                app:layout_constraintTop_toBottomOf="@id/wallet_info">

                <com.idhub.wallet.common.tablayout.TabLayout
                    android:id="@+id/tab_layout"
                    android:layout_width="match_parent"
                    android:layout_height="34dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="17dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="17dp"
                    android:background="@color/wallet_white"
                    android:paddingBottom="5dp"
                    app:wallet_tabIndicatorColor="@color/wallet_main_yellow_color"
                    app:wallet_tabIndicatorHeight="1dp"
                    app:wallet_tabIndicatorWidth="8dp"
                    app:wallet_tabSelectedTextColor="@color/wallet_main_yellow_color"
                    app:wallet_tabTextAppearance="@android:style/TextAppearance.Widget.TabWidget"
                    app:wallet_tabTextColor="@color/wallet_text_black"
                    app:wallet_tabTextSize="11sp" />
            </LinearLayout>


            <TextView
                android:id="@+id/assets_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginRight="16dp"
                android:drawableRight="@mipmap/wallet_assets_right_arrow"
                android:text="@string/wallet_assets"
                android:textColor="@color/wallet_text_black"
                android:textSize="20sp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tab_layout_view" />

            <com.idhub.wallet.common.viewpager.AutoHeightViewpager
                android:id="@+id/view_pager"
                android:layout_width="match_parent"
                android:layout_height="570dp"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@id/assets_name" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>

    <LinearLayout
        android:id="@+id/tab_layout_layout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/wallet_color_f5f5f5"
        android:orientation="vertical"
        android:paddingTop="8dp"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/title">

        <LinearLayout
            android:id="@+id/tan_layout_view2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="6dp"
            android:layout_marginTop="9dp"
            android:layout_marginRight="6dp"
            android:background="@mipmap/wallet_assets_tab_bg"
            android:gravity="center">

            <com.idhub.wallet.common.tablayout.TabLayout
                android:id="@+id/tab_layout2"
                android:layout_width="match_parent"
                android:layout_height="34dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@color/wallet_white"
                android:paddingBottom="5dp"
                app:wallet_tabIndicatorColor="@color/wallet_main_yellow_color"
                app:wallet_tabIndicatorHeight="1dp"
                app:wallet_tabIndicatorWidth="8dp"
                app:wallet_tabSelectedTextColor="@color/wallet_main_yellow_color"
                app:wallet_tabTextAppearance="@android:style/TextAppearance.Widget.TabWidget"
                app:wallet_tabTextColor="@color/wallet_text_black"
                app:wallet_tabTextSize="11sp" />
        </LinearLayout>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>